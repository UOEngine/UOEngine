<Project>
	<PropertyGroup>
		<UoEngineRoot>$(MSBuildThisFileDirectory)\..\</UoEngineRoot>
		<IntermediatePath>$(UoEngineRoot)\Intermediate</IntermediatePath>
		<OutputPath>$(UoEngineRoot)\Binaries\Win64\$(Configuration)\</OutputPath>
		<PluginOutputPath>$(OutputPath)\Plugins\$(MSBuildProjectName)</PluginOutputPath>
		<BaseIntermediateOutputPath>$(IntermediatePath)\DotNet\$(Configuration)\$(MSBuildProjectName)</BaseIntermediateOutputPath>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
		<UoEngineThirdParty>$(UoEngineRoot)\ThirdParty\</UoEngineThirdParty>
		<TargetFramework>net10.0</TargetFramework>
		<Platforms>x64</Platforms>
		<!--<PlatformTarget>x64</PlatformTarget>-->
		<!--<Configurations>Debug;Development</Configurations>-->
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<NoWarn>$(NoWarn);CS0067;CS0169;CS0414</NoWarn>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Development'">
		<Optimize>true</Optimize>
		<DebugType>pdbonly</DebugType>
	</PropertyGroup>

	<!--To debug release if issues-->
	<!--<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<Optimize>false</Optimize>
		<DebugType>pdbonly</DebugType>
	</PropertyGroup>-->

	<PropertyGroup>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
	</PropertyGroup>

	<PropertyGroup>
		<IsWindows>false</IsWindows>
		<IsMacOS>false</IsMacOS>
		<IsLinux>false</IsLinux>
		
		<IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</IsWindows>
		<IsMacOS Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' == 'true'">true</IsMacOS>
		<IsLinux Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' == 'true'">true</IsLinux>
	</PropertyGroup>

</Project>
